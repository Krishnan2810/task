{% if section.blocks.size > 0 %}
  {% case section.settings.grid %}
    {% when '1' %}

    {% when '2' %}
      {%- assign column = 'two-column' -%}
    {% when '3' %}
      {%- assign column = 'three-column' -%}
    {% when '4' %}
      {%- assign column = 'four-column' -%}
    {% else %}
      {%- assign column = 'three-column' -%}
  {% endcase %}
{% endif %}

{% if section.settings.enable_overlay %}
  {% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}

{% case section.settings.background_style %}
  {% when 'default' %}

  {% when 'parallax' %}
    {%- assign background_style = 'data-speed="2"' %}
  {% when 'fixed' %}
    {%- assign background_style = 'data-speed="1"' %}
{% endcase %}
{% if section.settings.show_background_image %}
  {% assign lazyScript = 'lazyload' %}
{% endif %}

{%- style -%}
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.40 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.40 | round: 0 }}px;
      }
    
      @media screen and (min-width: 1200px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }
     
   {%- if section.settings.cover_image != blank -%}
  .aimax-pricing-block .section-{{ section.id }}-cover_image {background-image: url('{{ section.settings.cover_image |  image_url: width: 1920   }}');
    background-size: cover;
    background-position:top;
    background-repeat: no-repeat;
    object-fit: cover;
    object-position: center;position: relative;

                                        }
  {%- endif -%}

  .aimax-pricing-block .section-heading h6.section-sub-heading{
    color: {{ section.settings.sub_heading_color }};  
    font-size: 1.8rem;
    text-transform: uppercase;
    font-weight: 600;
    margin: 0;
  }
  .aimax-pricing-block .section-heading h2.section-main-heading {
    margin: .5rem 0;
}
  .aimax-pricing-block{overflow: hidden;}
.aimax-pricing-block .section-heading{position: relative;}
  .aimax-pricing-block .section-heading:after{
    content:'';
    background:url('{{ section.settings.mask_image | image_url: width: 250 }}');
    width: 250px;
    height: 150px;
    position: absolute;
    background-size: contain;
    background-repeat: no-repeat;
    bottom: -60px;
    right: -100px;
    z-index: 2;
  }
  .shopify-section.reveal .aimax-pricing-block .section-heading:after{animation: bounceIn var(--anim-time) ease both;}
  @media screen and (max-width: 1199px){
    .aimax-pricing-block .section-heading:after{
  display: none;
    }
  }
{%- endstyle -%}
